upstream rippled_peers_api {
  server 127.0.0.1:1337
}

server {
  listen 80;

  return 301 https://$request_uri;
}   

server {
  listen 443;
  ssl on;

  ssl_certificate /etc/ssl/certs/rippled-peers-api/server.crt;
  ssl_certificate_key /etc/ssl/certs/rippled-peers-api/server.key;

  location / {
    proxy_pass http://rippled_peers_api;
     
    proxy_set_header Host $http_host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
}   

